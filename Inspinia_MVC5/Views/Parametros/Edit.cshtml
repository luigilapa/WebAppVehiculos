@model Modelo.Parametros

@{
    ViewBag.Title = "Editar Parámetro";
}

<div class="row">
   @using (Html.BeginForm())
   {
    @Html.AntiForgeryToken()
    <div class="col-lg-12">
        <div class="form-horizontal">

            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.id)

            <div class="form-group">
                @Html.LabelFor(model => model.codigo, "Código", new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.codigo, new { htmlAttributes = new { @class = "form-control",  @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.codigo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.descripcion, "Descripción", new { @class = "control-label col-md-2" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.valor_cadena_1, "Valor Principal", new { @class = "control-label col-md-2" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.valor_cadena_1)
                    @Html.ValidationMessageFor(model => model.valor_cadena_1, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.valor_cadena_2, "Valor Secundario", new { @class = "control-label col-md-2" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.valor_cadena_2)
                    @Html.ValidationMessageFor(model => model.valor_cadena_2, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
   }
    </div>

@section BodyFoot {
    @using (Html.BeginForm("Index", "Parametros", FormMethod.Get))
    {
        <button type="submit" class="btn btn-primary btn-circle" title="Regresar a la lista"><i class="fa fa-arrow-left"></i></button>
    }
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}






