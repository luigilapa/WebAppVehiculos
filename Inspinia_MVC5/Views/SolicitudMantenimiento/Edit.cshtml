@model Modelo.SolicitudMantenimiento

@{
    ViewBag.Title = "Editar Solicitud Mantenimiento";
}

                <div class="row">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">

                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(model => model.IdSolicitud)

                            <div class="form-group">
                                @Html.LabelFor(model => model.IdVehiculo, "IdVehiculo", new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("IdVehiculo", String.Empty)
                                    @Html.ValidationMessageFor(model => model.IdVehiculo)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.IdChofer, "IdChofer", new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("IdChofer", String.Empty)
                                    @Html.ValidationMessageFor(model => model.IdChofer)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.TipoMantenimiento, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.TipoMantenimiento)
                                    @Html.ValidationMessageFor(model => model.TipoMantenimiento)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Detalle, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Detalle)
                                    @Html.ValidationMessageFor(model => model.Detalle)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.FechaIngreso, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.FechaIngreso)
                                    @Html.ValidationMessageFor(model => model.FechaIngreso)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.FechaEstimadaSalida, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.FechaEstimadaSalida)
                                    @Html.ValidationMessageFor(model => model.FechaEstimadaSalida)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Activo, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Activo)
                                    @Html.ValidationMessageFor(model => model.Activo)
                                </div>
                            </div>                
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                <input type="submit" value="Guardar" class="btn btn-primary" />
                            </div>
                        </div>
                    }


                </div>



@section BodyFoot {
    @using (Html.BeginForm("Index", "SolicitudMantenimiento", FormMethod.Get))
            {
        <button type="submit" class="btn btn-primary btn-circle" title="Regresar a la lista"><i class="fa fa-arrow-left"></i></button>
    }
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

