@model Modelo.SolicitudMantenimiento

@{
    ViewBag.Title = "Aprobar Solicitud Mantenimiento";
}

                <div class="row">
                    <div class="col-lg-6">
                        <h4>¿Estás seguro que quieres aprobar?</h4>

                        <dl class="dl-horizontal">
                            <dt>
                                Chofer
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Usuario.Nombres)
                            </dd>

                            <dt>
                                Placa
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Vehiculo.placaLetras) @Html.DisplayFor(model => model.Vehiculo.placaNumeros)
                            </dd>

                            <dt>
                               Tipo Mantenimiento
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.TipoMantenimiento)
                            </dd>

                            <dt>
                                Detalle
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Detalle)
                            </dd>

                        </dl>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <input type="submit" value="Aprobar" class="btn btn-success" />
                            </div>
                        }

                    </div>
                </div>
@section BodyFoot {
<div>
    @using (Html.BeginForm("Index", "SolicitudMantenimiento", FormMethod.Get))
    {
        <button type="submit" class="btn btn-primary btn-circle" title="Regresar a la lista"><i class="fa fa-arrow-left"></i></button>
    }
</div>
    }

