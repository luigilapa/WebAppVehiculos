@model Modelo.Vehiculo

@{
    ViewBag.Title = "Eliminar Vehículo";
}

                <div class="row">
                    <div class="col-lg-6">
                        <h4>¿Estás seguro que quieres eliminar?</h4>

                        <dl class="dl-horizontal">
                            <dt>
                                Marca
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.VehiculoMarca.nombre)
                            </dd>

                            <dt>
                               Tipo
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.VehiculoTipo.nombre)
                            </dd>

                            <dt>
                                Placa
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.placaLetras) @Html.DisplayFor(model => model.placaNumeros)
                            </dd>

                            <dt>
                               Modelo
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.modelo)
                            </dd>

                            <dt>
                               Año
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.anio)
                            </dd>

                            <dt>
                               Color 1
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.color1)
                            </dd>

                            <dt>
                               Color 2
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.color2)
                            </dd>
                        </dl>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <input type="submit" value="Eliminar" class="btn btn-warning" />
                            </div>
                        }

                    </div>
                </div>

@section BodyFoot {
    @using (Html.BeginForm("Index", "Vehiculos", FormMethod.Get))
    {
        <button type="submit" class="btn btn-primary btn-circle" title="Regresar a la lista"><i class="fa fa-arrow-left"></i></button>
    }
}